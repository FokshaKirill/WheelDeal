@model List<WheelDeal.Domain.ViewModels.Categories.CategoryViewModel>
@{
    Layout = "_Layout";
    ViewData["Title"] = "AutoPark";
}
<h1>@ViewData["Title"]</h1>

<div class="section-body">
    <div class="section">
        <div class="grid-container">
            @if (Model.Count != 0)
            {
                @foreach (var item in Model)
                {
                    <div class="card-category" onclick="window.location.href = `@Url.Action("ListOfPosts", "Posts", new { Id = item.Id })`">
                        <img src="@item.ImagePath" alt="@item.Name" class="card-image"/>
                        <div class="card-overlay">
                            <div class="card-title">@item.Name</div>
                            <p class="card-description">
                                Количество объявлений: @item.CountPosts <br/>
                                Перейти к списку объявлений>
                            </p>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
