            </div>
            
            
            @* *@
            @* <div class="map"> *@
            @*     <script type="text/javascript" charset="utf-8" async src="https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3A67750b5248913c6e43ca3fda0affec3160319e6545d9a655ade7ac8a1d6f5edd&amp;width=100%25&amp;height=500&amp;lang=ru_RU&amp;scroll=true"></script> *@
            @* </div> *@
        </div>
        <div class="container-section">
            <p class="p2">
                Написать сообщение
            </p>
            <div class="block-message">
                <p style="margin-bottom: 0">Вы можете написать нам на почту здесь:</p>
                <div class="message-text" style="margin-top: 0">
                    <textarea class="text" style="padding: 5px"></textarea>
                </div>
                <div class="message-button">
                    <button class="button" type="submit">Отправить</button> </div>
            </div>
        </div>
    </section>

    <section id="contacts" class="section glow" style="background-color: #e2ddff">
        <div class="container">
            <h1>Контакты</h1>
            <div class="contacts">
                <div class="contactsItem" onclick="myhref('https://t.me/keefiremgmt');">
                    <img src="/images/tg.png" class="contacts-image" alt="Телеграм"/>
                    <h3>TELEGRAM</h3>
                </div>
                <div class="contactsItem" onclick="myhref('https://www.instagram.com/_keefire_/');">
                    <img src="/images/inst.png" class="contacts-image" alt="Инстаграм"/>
                    <h3>INSTAGRAM</h3>
                </div>
                <div class="contactsItem" onclick="myhref('mailto:foksakirill@gmail.com');">
                    <img src="/images/gmail.png" class="contacts-image" alt="Почта"/>
                    <h3>G-MAIL</h3>
                </div>
                <div class="contactsItem" onclick="myhref('https://vk.com/keefire');">
                    <img src="/images/vk.png" class="contacts-image" alt="Телефон"/>
                    <h3>VK</h3>
                </div>

                <script type="text/javascript">
                    function myhref(web){
                        window.location.href = web;}
                </script>
            </div>
        </div>
    </section>
    
